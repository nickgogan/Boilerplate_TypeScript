# Declare as topmost EditorConfig file
root = true

# Set default charset
[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Note: Line endings are handled in the .gitattributes file.
